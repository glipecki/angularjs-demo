{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "declaration": false,
        "target": "es5",
        "module": "system",
        "emitDecoratorMetadata": true,
        "inlineSourceMap": false,
        "outDir": "../../../target/ts-compiled/",
        "sourceRoot": "/",
        "rootDir": "./src/main/ts"
    },
    "filesGlob": [
        "**/*.ts",
        "../../../typings/**/*.d.ts"
    ],
    "files": [
        "app.ts",
        "async1/Async1Controller.ts",
        "async1/Async1Module.ts",
        "async1/Async1Routing.ts",
        "async2/Async2Controller.ts",
        "async2/Async2Module.ts",
        "async2/Async2Routing.ts",
        "asyncApp.ts",
        "asyncIndex.ts",
        "demo/DemoDirective.ts",
        "demo/DemoDirectiveController.ts",
        "demo/DemoDirectiveItTest.ts",
        "demo/DemoDirectiveTest.ts",
        "demo/DemoInnerDirective.ts",
        "demo/DemoModule.ts",
        "demo/DemoModuleRouting.ts",
        "demo/DemoService.ts",
        "demo/DemoServiceTest.ts",
        "index.ts",
        "menu/IMenuController.ts",
        "menu/MenuController.ts",
        "menu/MenuDirective.ts",
        "menu/MenuModule.ts",
        "protractorTestFun.ts",
        "simple/SimpleController.ts",
        "simple/SimpleModule.ts",
        "simple/SimpleModuleRouting.ts",
        "systemjs-config.ts",
        "utils/BaseDirective.ts",
        "../../../typings/angular-protractor/angular-protractor.d.ts",
        "../../../typings/angular-ui-router/angular-ui-router.d.ts",
        "../../../typings/angularjs/angular-mocks.d.ts",
        "../../../typings/angularjs/angular.d.ts",
        "../../../typings/jasmine/jasmine.d.ts",
        "../../../typings/jquery/jquery.d.ts",
        "../../../typings/oclazyload/oclazyload.d.ts",
        "../../../typings/selenium-webdriver/selenium-webdriver.d.ts",
        "../../../typings/systemjs/systemjs.d.ts",
        "../../../typings/tsd.d.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": false,
        "placeOpenBraceOnNewLineForControlBlocks": false
    }
}
